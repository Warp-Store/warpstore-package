{
  
    "compilerOptions": {
      "experimentalDecorators": true,
      "declaration": true,
      "declarationMap": true,
      "composite": true,
      "target": "es2021",
      "module": "commonjs",
      "rootDir": ".",
      "moduleResolution": "node",
      "baseUrl": "./src",
      "noImplicitAny": true,
      "paths": {
        "@/*": [
          "*"
        ]
      },
      "plugins": [
        {
          "transform": "typescript-transform-paths"
        },
        {
          "transform": "typescript-transform-paths",
          "afterDeclarations": true
        }
      ],
      "outDir": "./dist",
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
    }
  }